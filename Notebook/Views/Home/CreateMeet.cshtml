<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>CreateMeet</title>
    </head>

    <body>
        <h2>Meet creating</h2>

        @Html.ValidationSummary()
        @using (Html.BeginForm())
        {
            <fieldset>
                <p>
                    <label for="Type">Type:</label>
                    @Html.TextBox("Type", "Meet")
                    @Html.ValidationMessage("Type")
                </p>
                <p>
                    <label for="Theme">Subject:</label>
                    @Html.TextBox("Theme")
                    @Html.ValidationMessage("Theme")
                </p>
                <p>
                    <label for="StartTime">First date and time:</label>
                    @Html.TextBox("StartTime")
                    @Html.ValidationMessage("StartTime")
                </p>
                <p>
                    <label for="FinishTime">Last date and time:</label>
                    @Html.TextBox("FinishTime")
                    @Html.ValidationMessage("FinishTime")
                </p>
                <p>
                    <label for="Place">Place:</label>
                    @Html.TextBox("Place")
                    @Html.ValidationMessage("Place")
                </p>
                <p>
                    <input type="submit" value="Create" />
                </p>
            </fieldset>
        }

        <div>@Html.ActionLink("Back to Main", "Index")</div>

    </body>
</html>